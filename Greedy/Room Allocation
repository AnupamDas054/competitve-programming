#include<bits/stdc++.h>
using namespace std;

int main()
{
    //number of train
    int n;cin>>n;
    //start time of the train
    int st[n+2];
    for(int i=0;i<n;i++)cin>>st[i];
    //departure time of the train
    int fi[n+3];
    for(int i=0;i<n;i++)cin>>fi[i];
    sort(st,st+n);
    sort(fi,fi+n);
    int i=0,j=0;
    int result=0,platform=0;
    while(i<n && j<n)
    {
        if(st[i]<=fi[j])
        {
            platform++;
            i++;
            if(platform>result)result=platform;
        }
        else
        {
            platform--;
            j++;
        }
    }
    cout<<result<<endl;

    return 0;
}

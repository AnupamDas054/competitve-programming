#include<bits/stdc++.h>

using namespace std;

struct edge{
    int a,b,w;
};

edge edges[100007];

int par[10004];

bool comp(edge a, edge b)
{
    if(a.w<b.w)
    return true;
    return false;
}
int find(int a)
{
    if(par[a]==-1)
    return a;
    return par[a]=find(par[a]);
}

int main()
{
   int n,m;cin>>n>>m;
   for(int i=0;i<m;i++)
     cin>>edges[i].a>>edges[i].b>>edges[i].w;
   for(int i=0;i<=n;i++)par[i]=-1;
   sort(edges,edges+m,comp);
   long long int sum=0;
   for(int i=0;i<m;i++)
   {
       int a=find(edges[i].a);
       int b=find(edges[i].b);
       if(a!=b)
       {
           par[a]=b;
           sum+=edges[i].w;
       }
   }
   cout<<sum<<endl;
}

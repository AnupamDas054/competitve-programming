problem:road minister techboy (toph)

#include<bits/stdc++.h>

using namespace std;
vector< pair<int,int> >v[10005];
int vis[10005];
int mx=INT_MIN;
void dfs(int i,int w)
{
    vis[i]=1;
    mx=max(mx,w);
    //cout<<i<<" "<<w<<endl;
    for(auto it:v[i])
    {
        int fi=it.first;int se=it.second;
        //cout<<fi<<" "<<se<<endl;
        if(vis[fi]==0)
        {
            //cout<<"inside the loop "<<fi<<" "<<se<<endl;
            dfs(fi,w+se);

        }

    }
    //cout<<i<<" "<<w<<endl;
//cout<<"NOT found "<<endl;
}
void solve()
{
    memset(vis,0,sizeof vis);
    mx=INT_MIN;
    int n;cin>>n;
    long long int sum=0;
    for(int i=0;i<n-1;i++)
    {
        int x,y,w;cin>>x>>y>>w;
        v[x].push_back({y,w});
        v[y].push_back({x,w});
        sum+=2*w;
    }
//    for(int i=1;i<=n;i++)
//    {
//        cout<<v[i].size()<<endl;
//        for(int j=0;j<v[i].size();j++)
//        {
//            cout<<v[i][j].first<<" "<<v[i][j].second<<endl;;
//        }
//        cout<<endl;
//    }
    dfs(1,0);
   // cout<<mx<<endl;
    cout<<sum-mx<<endl;
    for(int i=1;i<=n;i++)
    {
        v[i].clear();
    }
}

int main()
{
    int t;cin>>t;
    for(int i=1;i<=t;i++)
    {
        cout<<"Case "<<i<<": ";
        solve();
    }
}
